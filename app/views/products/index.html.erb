<%= flash[:notice] %>
<div class="align-form">
  <p id="notice"><%= notice %></p>

  <div style="float: left"><h1>Products</h1></div>
  <div style="float: right"><%= link_to ' New Product', new_product_path %></div>
  <div style="float: right">Import CSV <span> | </span></div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% if @products.present? %>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.description %></td>
            <td><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      <% elsif @product.present? %>
        <tr>
          <td><%= @product.name %></td>
          <td><%= @product.price%></td>
          <td><%= @product.description %></td>
          <td><%= link_to 'Show', @product %></td>
          <td><%= link_to 'Edit', edit_product_path(@product) %></td>
          <td><%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <h4>Import product data</h4>
  <%= form_tag import_products_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "import CSV", class: 'btn btn-primary' %>
  <% end %>
</div>

<style>
 .align-form {
   margin: 50px;
 }
</style>
